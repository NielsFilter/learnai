{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "func: host start",
            "type": "shell",
            "command": "func host start",
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\activate ; func host start"
            },
            "problemMatcher": "$func-python-watch",
            "isBackground": true,
            "dependsOn": "pip install (functions)",
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}\\.venv\\Lib\\site-packages"
                }
            }
        },
        {
            "label": "pip install (functions)",
            "type": "shell",
            "osx": {
                "command": "${workspaceFolder}/${config:azureFunctions.pythonVenv}/bin/python -m pip install -r requirements.txt"
            },
            "windows": {
                "command": "${workspaceFolder}\\${config:azureFunctions.pythonVenv}\\Scripts\\python.exe -m pip install -r requirements.txt"
            },
            "linux": {
                "command": "${workspaceFolder}/${config:azureFunctions.pythonVenv}/bin/python -m pip install -r requirements.txt"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            }
        }
    ]
}